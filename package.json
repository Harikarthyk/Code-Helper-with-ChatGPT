{
  "name": "codeHelper",
  "displayName": "Code Helper with Chat GPT",
  "publisher": "codeHelperAAPNA",
  "description": "codeHelper",
  "version": "0.0.3", 
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Harikarthyk/Code-Helper-with-ChatGPT"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeHelper.helloWorld",
        "title": "Test Extension"
      },
      {
        "command": "codeHelper.breakdownCode",
        "title": "Explain Code with AI"
      },
      {
        "command": "codeHelper.refactorWithOpenAI",
        "title": "Refactor with AI"
      },
      {
        "command": "codeHelper.writeTestCase",
        "title": "Write Test Case With AI" 
      },
      {
        "command": "codeHelper.addCommentsToMethod",
        "title": "Add Comments Endpoint" 
      },
      {
        "command": "codeHelper.getAnsForComment",
        "title": "Get Answer for Comment from AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "codeHelper.breakdownCode",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.refactorWithOpenAI",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.writeTestCase",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.addCommentsToMethod",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.getAnsForComment",
          "group": "AI Helper"
        }
      ],
      "scm/resourceFolder/context": [
        {
          "command": "codeHelper.helloWorld",
          "group": "AI Helper",
          "when": "resourceScheme == file"
        }
      ],
      
      "commandPalette": [
        {
          "command": "codeHelper.helloWorld",
          "group": "AI Helper"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "openai-api": "^1.3.1"
  }
}
