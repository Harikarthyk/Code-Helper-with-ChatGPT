{
  "name": "codeHelper",
  "displayName": "Code Helper with Chat GPT",
  "publisher": "codeHelperAAPNA",
  "description": "Ask questions about your code and get answers from the AI.",
  "version": "2.0.0",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Harikarthyk/Code-Helper-with-ChatGPT"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:codeHelper.openChat"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionView",
          "title": "My Extension",
          "icon": "./icon.png",
          "command": "codeHelper.openChat",
          "openCommand": "codeHelper.openChat"
        }
      ]
    },
    "commands": [
      {
        "command": "codeHelper.breakdownCode",
        "title": "Code Helper: Explain the Code"
      },
      {
        "command": "codeHelper.refactorWithOpenAI",
        "title": "Code Helper: Refactor the Code"
      },
      {
        "command": "codeHelper.writeTestCase",
        "title": "Code Helper: Write Test Cases"
      },
      {
        "command": "codeHelper.addCommentsToMethod",
        "title": "Code Helper: Add Comments to Your Route Methods"
      },
      {
        "command": "codeHelper.getAnsForComment",
        "title": "Code Helper: Get Answers for your comments"
      },
      {
        "command": "codeHelper.findBugs",
        "title": "Code Helper: Find Bugs in your code"
      },
      {
        "command": "codeHelper.openChat",
        "title": "Code Helper: Chat with Code Helper GPT"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "codeHelper.breakdownCode",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.refactorWithOpenAI",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.writeTestCase",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.addCommentsToMethod",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.getAnsForComment",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.findBugs",
          "group": "AI Helper"
        },
        {
          "when": "editorFocus",
          "command": "codeHelper.openChat",
          "group": "AI Helper"
        }
      ]
    },
    "configuration": {
      "title": "Code Helper",
      "properties": {
        "codeHelper.apiKey": {
          "type": "string",
          "default": "YOUR_API_KEY",
          "description": "Your OpenAI API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "openai": "^3.3.0",
    "openai-api": "^1.3.1"
  }
}
